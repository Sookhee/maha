<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp">

    <TextView
        android:id="@+id/hobbyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:includeFontPadding="false"
        android:text="취미명"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/hobbyImageLayout"
        app:layout_constraintTop_toBottomOf="@+id/hobbyImageLayout" />

    <TextView
        android:id="@+id/hobbyMemberCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:text="0"
        android:textColor="@color/warm_gray"
        app:layout_constraintStart_toStartOf="@+id/hobbyImageLayout"
        app:layout_constraintTop_toBottomOf="@+id/hobbyName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:includeFontPadding="false"
        android:text="명"
        android:textColor="@color/warm_gray"
        app:layout_constraintBottom_toBottomOf="@+id/hobbyMemberCount"
        app:layout_constraintStart_toEndOf="@+id/hobbyMemberCount"
        app:layout_constraintTop_toTopOf="@+id/hobbyMemberCount" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hobbyImageLayout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/hobbyImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hobbyImageLayer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/radial_gradient_purple_circle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>